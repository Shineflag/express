<%include header%>
<form method="post" class="form-horizontal">
  <h2>用户登陆</h2>
  <hr/>
  <div class="form-group">
    <label for="username" class="control-label col-sm-2">用户名</label>
    <div class="col-sm-8">
      <input id="username" type="text" name="username" placeholder="输入用户名" class="form-control"/>
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="control-label col-sm-2">密码</label>
    <div class="col-sm-8">
      <input id="password" type="password" name="password" placeholder="输入密码" class="form-control"/>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12 col-sm-offset-2">
      <button type="submit" class="btn btn-primary">登陆</button>
    </div>
  </div>
</form>
<script type="text/javascript">
  $(".layout-shouye").removeClass("active");
  $(".layout-login").addClass("active");
  $(".layout-reg").removeClass("active");
</script>
<%include footer%>